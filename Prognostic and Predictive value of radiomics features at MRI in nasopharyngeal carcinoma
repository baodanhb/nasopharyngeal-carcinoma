Nstage.roc.train <- timeROC(T=train1$Time,
                           delta = train1$Prognosis,
                           marker = train1$Nstage,
                           cause = 1, weighting = "marginal",
                           times = c(12,36,60,84),
                           ROC = TRUE,
                           iid = TRUE)

