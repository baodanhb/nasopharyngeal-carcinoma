## nomograph

library(rms)

npc.nomo <- npc199.reduced
colnames(npc.nomo)[5] <- "RadScore"
npc.nomo$Histology <- factor(npc.nomo$Histology,
                             levels = c(1, 2),
                             labels = c("Differentiated", "Undifferentiated"))
npc.nomo$Nstage <- factor(npc.nomo$Nstage,
                          levels = c(0, 1, 2, 3),
                          labels = c("N0", "N1", "N2", "N3"))

dd = datadist(npc.nomo)
options(datadist="dd")
f1 <- psm(Surv(Time, Prognosis) ~ Histology+Nstage+RadScore, data = npc.nomo,
          dist = "lognormal",
          x = TRUE, y = TRUE) # Develop calibaration curve x，y must be TRUE
med <- Quantile(f1)
surv <- Survival(f1)

nomo.cox <- nomogram(f1, fun = list(function(x)surv(36, x),
                                    function(x)surv(60, x),
                                    function(x)med(lp=x)),
                     funlabel=c("3-year DFS", "5-year DFS","Median DFS Time"))

nomo.cox <- nomogram(f1, fun = list(function(x)surv(36, x),
                                    function(x)surv(60, x)),
                     funlabel=c("3-year DFS", "5-year DFS"),
                     lp = FALSE)

plot(nomo.cox, xfrac=0.4, cex.axis=1) # xfrac is the distance between the variable name and the line


#  calibration curve of nomogram

# Calibration curve - Method first, a curve
cal1 <- calibrate(f1, cmethod = "KM", u = 60, method = "boot", B = 1000, m = 40)#计算5年校准曲线
plot(cal1, xlim=c(0,0.8),ylim=c(0,0.8),
     xlab="Nomogram-predicted DFS",
     ylab="Observed DFS",
     subtitles = FALSE,
     errbar.col=c(rgb(0,118,192,maxColorValue=255)),
     col=c(rgb(192,98,83,maxColorValue=255)),
     lwd = 2)
abline(0,1, col="black", lty=2, lwd=1)
title("Calibrate Curve at 5-years")

# Calibration curve - Method second, many curves

cal3 <- calibrate(f1, cmethod = "KM", u = 36, method = "boot", B = 1000, m = 40)#计算3年校准曲线
cal5 <- calibrate(f1, cmethod = "KM", u = 60, method = "boot", B = 1000, m = 40)#计算5年校准曲线

plot(cal3,lwd = 2,lty = 0,errbar.col = c("#2166AC"),
     bty = "l", #Draw only the left and bottom borders
     subtitles = FALSE,
     xlim = c(0.2,0.8),ylim= c(0.2,0.8),
     xlab = "Nomogram-predicted DFS",ylab = "Observed DFS",
     col = c("#2166AC"),
     cex.lab=1.2,cex.axis=1, cex.main=1.2, cex.sub=0.6)
lines(cal3[,c('mean.predicted',"KM")],
      type = 'b', lwd = 1, col = c("#2166AC"), pch = 16)
mtext("")

plot(cal5,lwd = 2,lty = 0,errbar.col = c("#B2182B"),
     xlim = c(0.2,0.8),ylim= c(0.2,0.8),col = c("#B2182B"),add = T)
lines(cal5[,c('mean.predicted',"KM")],
      type = 'b', lwd = 1, col = c("#B2182B"), pch = 16)

abline(0,1, lwd = 2, lty = 3, col = c("#224444"))

legend("topleft", #Location of legend
       legend = c("3-year","5-year"), #legend text
       col =c("#2166AC","#B2182B"), #The color of the legend line corresponds to the text
       lwd = 2,#The thickness of the line in the legend
       cex = 1.2,#Legend font size
       bty = "n")#The legend border is not displayed


